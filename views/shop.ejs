<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Shop Products</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      background: linear-gradient(135deg, #2980b9, #6dd5fa);
    }

    .main-wrapper {
      max-width: 1400px;
      margin: 0 auto;
      padding: 40px;
    }

    .container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      display: flex;
      gap: 40px;
      padding: 40px;
    }

    .sidebar {
      width: 25%;
    }

    .sidebar h2 {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #333;
    }

    .sidebar label {
      font-size: 14px;
      color: #444;
    }

    .sidebar .section {
      margin-bottom: 30px;
    }

    select,
    input[type='range'] {
      width: 100%;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      margin-top: 6px;
    }

    .product-area {
      width: 75%;
    }

    .product-area h2 {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 24px;
      color: #444;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }

    .product-card {
      background-color: #f9f9f9;
      border-radius: 12px;
      padding: 16px;
      transition: 0.3s ease;
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .product-card:hover {
      transform: translateY(-5px);
    }

    .product-card img {
      height: 180px;
      width: 100%;
      object-fit: contain;
      margin-bottom: 10px;
      border-radius: 8px;
    }

    .product-card h3 {
      font-weight: 600;
      font-size: 18px;
      margin-bottom: 8px;
    }

    .product-card p {
      color: #666;
      margin-bottom: 12px;
    }

    a.add-btn {
      display: inline-block;
      background-color: #007bff;
      color: white;
      font-size: 16px;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 6px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    a.add-btn:hover {
      background-color: #0056b3;
    }

    .success-box {
      position: fixed;
      top: 90px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #3b82f6;
      color: white;
      padding: 12px 20px;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      font-size: 14px;
      font-weight: 500;
      z-index: 999;
      animation: fadeInDown 0.4s ease;
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translate(-50%, -20px);
      }
      to {
        opacity: 1;
        transform: translate(-50%, 0);
      }
    }
  </style>
</head>
<body>

  <!-- Header Include -->
  <%- include('./partials/header') %>


  <% if(success.length > 0) { %>
    <div class="success-box"><%= success %></div>
  <% } %>

  <div class="main-wrapper">
    <div class="container">
      <!-- Sidebar Filters -->
      <aside class="sidebar">
        <h2>Filter Products</h2>

        <div class="section">
          <label class="block">Sort By</label>
          <select>
            <option>Popular</option>
            <option>Newest</option>
            <option>Price: Low to High</option>
            <option>Price: High to Low</option>
          </select>
        </div>

        <div class="section">
          <label class="block">Categories</label>
          <div style="display: flex; flex-direction: column; gap: 10px; margin-top: 10px;">
            <label><input type="checkbox" style="margin-right: 8px;" />Clothing</label>
            <label><input type="checkbox" style="margin-right: 8px;" />Electronics</label>
            <label><input type="checkbox" style="margin-right: 8px;" />Footwear</label>
            <label><input type="checkbox" style="margin-right: 8px;" />Accessories</label>
          </div>
        </div>

        <div class="section">
          <label class="block">Price Range</label>
          <input type="range" min="100" max="5000" />
        </div>
      </aside>

      <!-- Product Cards -->
      <main class="product-area">
        <h2>All Products</h2>
        <div class="product-grid">
          <% products.forEach((product) => { %>
            <div class="product-card">
              <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image" />
              <h3><%= product.name %></h3>
              <p>â‚¹<%= product.price %></p>
              <a href="/users/addtocart/<%= product._id %>" class="add-btn">Add to Cart</a>
            </div>
          <% }); %>
        </div>
      </main>
    </div>
  </div>
</body>
</html>
