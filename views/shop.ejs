<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      background: linear-gradient(135deg, #2980b9, #6dd5fa);
      display: flex;
      justify-content: center;
      padding: 40px;
    }
    .container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      width: 100%;
      max-width: 1200px;
      display: flex;
      padding: 40px;
      gap: 40px;
    }
    .sidebar h2 {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #333;
    }
    .sidebar label {
      font-size: 14px;
      color: #444;
    }
    .product-card {
      background-color: #f9f9f9;
      border-radius: 12px;
      padding: 16px;
      transition: 0.3s ease;
      box-shadow: 0 8px 15px rgba(0,0,0,0.1);
    }
    .product-card:hover {
      transform: translateY(-5px);
    }
    .product-card img {
      height: 180px;
      width: 100%;
      object-fit: contain;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    
    <!-- Sidebar Filters -->
    <aside class="w-1/4 sidebar">
      <h2>Filter Products</h2>

      <div class="mb-6">
        <label class="block mb-1 font-medium">Sort By</label>
        <select class="w-full border p-2 rounded">
          <option>Popular</option>
          <option>Newest</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
        </select>
      </div>

      <div class="mb-6">
        <label class="block mb-2 font-medium">Categories</label>
        <div class="flex flex-col gap-2 text-sm">
          <label><input type="checkbox" class="mr-2">Clothing</label>
          <label><input type="checkbox" class="mr-2">Electronics</label>
          <label><input type="checkbox" class="mr-2">Footwear</label>
          <label><input type="checkbox" class="mr-2">Accessories</label>
        </div>
      </div>

      <div>
        <label class="block mb-1 font-medium">Price Range</label>
        <input type="range" min="100" max="5000" class="w-full">
      </div>
    </aside>

    <!-- Product Cards -->
    <main class="w-3/4">
      <h2 class="text-2xl font-bold mb-6 text-gray-700">All Products</h2>
      <div class="grid grid-cols-3 gap-6">
        <!-- Product Card 1 -->
        <% products.forEach((product) => { %>
        <div class="product-card ">
        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image">
        <h3 class="font-semibold text-lg mb-1"><%= product.name %></h3>
        <p class="text-gray-600 mb-2">â‚¹<%= product.price %></p>
        <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">Add to Cart</button>
        </div>
        <% }); %>
      </div>
    </main>
  </div>
</body>
</html>
